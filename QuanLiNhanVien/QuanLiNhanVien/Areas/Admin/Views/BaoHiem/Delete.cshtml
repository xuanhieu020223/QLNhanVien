@model QuanLiNhanVien.Models.BaoHiem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Xóa bảo hiểm </h2>

<h3 class="text-center">Bạn có chắc chắn muốn xóa cái này không?</h3>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <hr />
            <div class="form-group">
                <label for="Name">ID Bảo Hiểm:</label>
                <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.IDBH)" readonly>
            </div>
            <div class="form-group">
                <label for="Name">Tên Bảo Hiểm :</label>
                <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.NameBH)" readonly>
            </div>
            <div class="form-group">
                <label for="Name">Số Tiền :</label>
                <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.SoTien)" readonly>
            </div>
            <div class="form-group">
                <label for="Name">Mô Tả :</label>
                <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.MoTa)" readonly>
            </div>
            <div class="form-group">
                <label for="Name">Tên Nhân Viên :</label>
                <input type="text" class="form-control" id="Name" value="@Html.DisplayFor(model => model.NhanVien.Name)" readonly>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color text-center">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Trở Lại", "Index")
                </div>
            }
        </div>
    </div>
</div>