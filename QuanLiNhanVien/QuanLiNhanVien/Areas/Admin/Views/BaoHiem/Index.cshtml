@model IEnumerable<QuanLiNhanVien.Models.BaoHiem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Thông Tin bảo hiểm</h2>

<p>
    @Html.ActionLink("Thêm Bảo Hiểm ", "Create", null, new { @class = "btn btn-success" })

</p>
<table class="table table-striped table-bordered">
    <thead class="thead-light-sky-blue">
        <tr>
            <th>
                IDBH
            </th>
            <th>
                Tên bảo hiểm
            </th>
            <th>
                Số Tiền
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Tên nhân viên
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDBH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameBH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoTien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhanVien.Name)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDBH }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDBH }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDBH }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .thead-light-sky-blue {
        background-color: #87CEEB; /* Light Sky Blue color */
    }
</style>
