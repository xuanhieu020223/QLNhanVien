@model IEnumerable<QuanLiNhanVien.Models.BoPhan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Bộ phận</h2>

<div class="container">
    <p>
        @Html.ActionLink("Thêm Bộ Phận", "Create", null, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-light-sky-blue">
                <tr>
                    <th>
                        ID Bộ Phận
                    </th>
                    <th>
                        Tên Bộ Phận
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDBP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameBP)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.IDBP }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDBP }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDBP }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .thead-light {
        background-color: #87CEEB; /* Light Sky Blue color */
    }

</style>
