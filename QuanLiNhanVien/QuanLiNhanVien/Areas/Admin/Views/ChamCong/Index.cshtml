@model IEnumerable<QuanLiNhanVien.Models.ChamCong>

@{
    ViewBag.Title = "Thông tin châm công";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Thông tin chấm công</h2>

<div class="container">
    <p>
        @Html.ActionLink("Thêm", "Create", null, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-light-sky-blue">
                <tr>
                    <th>
                        IDCC
                    </th>
                    <th>
                        Ngày
                    </th>
                    <th>
                        Tên loại công
                    </th>
                    <th>
                        Vị trí
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDCC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Day)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoaiCong.NameLC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Luong.ViTri)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.IDCC }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCC }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDCC }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
