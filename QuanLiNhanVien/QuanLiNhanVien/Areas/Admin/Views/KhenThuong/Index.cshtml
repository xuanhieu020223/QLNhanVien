@model IEnumerable<QuanLiNhanVien.Models.KhenThuong>

@{
    ViewBag.Title = "Thông tin khen thưởng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Thông tin khen thưởng</h2>

<div class="container">
    <p>
        @Html.ActionLink("Thêm Khen Thưởng", "Create", null, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-light-sky-blue">
                <tr>
                    <th>
                        ID Khen Thưởng
                    </th>
                    <th>
                        Tên Khen Thưởng
                    </th>
                    <th>
                        Mã Nhân Viên
                    </th>
                    <th>
                        Số Tiền
                    </th>
                    <th>
                        Mô Tả
                    </th>
                    <th>
                        Vị Trí
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDKT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameKT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Luong.MaNV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoTien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Luong.ViTri)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.IDKT }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDKT }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDKT }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>