@model IEnumerable<QuanLiNhanVien.Models.NhanVien>

@{
    ViewBag.Title = "Thông Tin Nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Thông Tin Nhân viên</h2>

<p>
    @Html.ActionLink("Thêm nhân viên ", "Create", null, new { @class = "btn btn-success" })
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-light-sky-blue">
            <tr>
                <th>
                    MaNV
                </th>
                <th>
                    Tên nhân viên
                </th>
                <th>
                    Giới tính
                </th>
                <th>
                    Ngày sinh
                </th>
                <th>
                    Số điện thoại
                </th>
                <th>
                    Số CCCD
                </th>
                <th>
                    Địa chỉ
                </th>

                <th>
                    Chức vụ
                </th>
                <th>
                    Trình độ học vấn
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNV)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                      @string.Format("{0:dd-MM-yyyy}", item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CCCD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ChucVu.NameCV)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TrinhDo.NameTD)
                    </td>

                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .thead-light-sky-blue {
        background-color: #87CEEB; /* Màu Light Sky Blue */
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #f2f2f2;
        }

    .btn {
        margin-right: 5px;
    }
</style>