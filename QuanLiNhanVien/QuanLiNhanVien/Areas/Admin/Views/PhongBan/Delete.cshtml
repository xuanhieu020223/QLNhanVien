@model QuanLiNhanVien.Models.PhongBan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Xóa phòng ban</h2>

<div class="container">
    <h3 class="text-center">Bạn có chắc chắn muốn xóa phòng ban này không?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <hr />
            <dl class="dl-horizontal">
                <div class="row">
                    <div class="col-md-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.IDPB)
                        </dt>
                    </div>
                    <div class="col-md-10">
                        <dd>
                            @Html.DisplayFor(model => model.IDPB)
                        </dd>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <dt>
                            @Html.DisplayNameFor(model => model.NamePB)
                        </dt>
                    </div>
                    <div class="col-md-10">
                        <dd>
                            @Html.DisplayFor(model => model.NamePB)
                        </dd>
                    </div>
                </div>
            </dl>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
                    @Html.ActionLink("Trở Lại", "Index", null, new { @class = "btn btn-default btn-sm" })
                </div>
            }
        </div>
    </div>
</div>
