@model IEnumerable<QuanLiNhanVien.Models.PhuCapNV>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Phụ cấp nhân viên</h2>

<div class="container">
    <p>
        @Html.ActionLink("Thêm phụ cấp", "Create", null, new { @class = "btn btn-success" })
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-light-sky-blue">
                <tr>
                    <th>
                        Tên phụ cấp
                    </th>
                    <th>
                        Số tiền
                    </th>
                    <th>
                        Mô tả
                    </th>
                    <th>
                        Vị trí
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NamePC)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SoTien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Luong.ViTri)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.IDPC }, new { @class = "btn btn-primary btn-sm" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.IDPC }, new { @class = "btn btn-info btn-sm" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.IDPC }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .thead-light-sky-blue {
        background-color: #87CEEB; /* Màu Light Sky Blue */
    }
</style>