@model IEnumerable<QuanLiNhanVien.Models.TangCa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Tăng Ca</h2>

<p> @Html.ActionLink("Thêm ", "Create", null, new { @class = "btn btn-success" })</p>

<div class="table-responsive mx-auto">
    <table class="table table-striped table-bordered text-center">
        <thead class="thead-light-sky-blue">
            <tr>
                <th>
                    Ngày tăng ca
                </th>
                <th>
                    Số giờ
                </th>
                <th>
                    Tên loại ca
                </th>
                <th>
                    Tên Nhân viên
                </th>
                <th>
                    vị trí
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @string.Format("{0:dd-MM-yyyy}", item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoGio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiCa.NameLC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Luong.NhanVien.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Luong.ViTri)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.IDTC }, new { @class = "btn btn-primary btn-sm" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.IDTC }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDTC }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .thead-light-sky-blue {
        background-color: #87CEEB; /* Light Sky Blue color */
    }
</style>
