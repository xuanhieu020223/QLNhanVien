@model QuanLiNhanVien.Models.BaoHiem
@{
    ViewBag.Title = "BaoHiem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center" style="margin-top: 70px;">Thông tin bảo hiểm</h2>

<div class="container center-container" style="margin-top: 1cm;">
    <div class="table-responsive" style="margin-left: 100px; margin-right: 150px;">
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Tên bảo hiểm</th>
                    <th>Số tiền</th>
                    <th>Mô tả</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    <td>@Model.NameBH</td>
                    <td>@Model.SoTien</td>
                    <td>@Model.MoTa</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<style>
    table {
        margin-bottom: 0;
    }

    th, td {
        padding: 0.5rem;
        font-size: 14px;
    }

    th {
        text-align: center;
    }

    .container {
        padding-left: 0;
        padding-right: 0;
    }

    .table-responsive {
        overflow-x: auto;
    }

    tr.hover-effect:hover {
        background-color: #f5f5f5;
        cursor: pointer;
    }

    .tooltip {
        position: relative;
        display: inline-block;
        cursor: pointer;
    }

        .tooltip .tooltip-text {
            visibility: hidden;
            width: 120px;
            background-color: #000;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px;
            position: absolute;
            z-index: 1;
            bottom: 125%;
            left: 50%;
            transform: translateX(-50%);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .tooltip:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }
</style>

